---
import ImageLink from "@components/ui/links/ImageLink.astro";
import { Image } from 'astro:assets';

import youtubeImage from "@images/other_brands/yt_icon_mono_dark.png";
import twitchImage from "@images/other_brands/TwitchGlitchWhite.png";

const { image, name, role, twitch, youtube, twitchUrl, youtubeUrl } = Astro.props;
---

<div class="w-[350px] h-[450px] relative">
	<div class=`bg-gray-200 bg-cover w-[350px] h-[360px] flex flex-col card-noclip`>
		<Image class="card-noclip h-full" src={image} alt=`${name}` height="360" width="360" ></Image>
	</div>
	<div class="bg-gray-300 w-[350px] h-[125px] card-clip flex flex-col absolute top-[325px] p-3.5 pr-5">
		<div class="flex">
			<span class="font-body font-bold text-white text-4xl">{name||"Max Mustermann"}</span>
		</div>
		<div class="flex flex-row pt-3.5 justify-between">
			<div class="">
				<span class="font-body text-primary text-xl">{role||"Player"}</span>
			</div>
			<div class="flex place-self-center">
				{youtube ?
					<div class="pl-2">
						<ImageLink image={youtubeImage} alt="YouTube" url={youtubeUrl} size="40"></ImageLink>
					</div> :
					""}
				{twitch ?
					<div class="pl-2">
						<ImageLink image={twitchImage} alt="Twitch" url={twitchUrl} size="40"></ImageLink>
					</div> :
					""}
			</div>
		</div>
	</div>
</div>

---
import discordLogo from '@images/other_brands/discord.svg'
import {Image} from "astro:assets";

const {link} = Astro.props;
---
<div class="h-100 w-full bg-[#5865F2] px-50 1.5xl:px-100">
    <a href={link}>
        <div class="flex flex-row items-center justify-center lg:justify-normal gap-200 lg:gap-230 h-full">
            <Image src={discordLogo} alt="Discord Logo" height={40}></Image>
            <p class="font-body text-2xl font-black hidden lg:block">TRETE UNSEREM DISCORD BEI!</p>
        </div>
    </a>
</div>
---
interface Props {
    text: string;
    link?: string;
}

const { text, link } = Astro.props;
---

<a class="h-fit" href={link}>
    <div class="button-clip-normal h-100 w-415 text-center align-middle text-base leading-100 bg-primary">
        <span class="w-full align-middle inline-block leading-normal font-display text-6xl text-gray-500">{text}</span>
    </div>
</a>